<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView"
            android:layout_margin="2dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始录制" />


        <TextView
            android:id="@+id/textViewPic"
            android:layout_margin="2dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍照" />



    </RelativeLayout>



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"
        android:text="停止录制" />

    <TextView
        android:text="切换摄像头"
        android:layout_margin="2dp"
        android:id="@+id/textViewSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="切换到拍照模式"
            android:layout_margin="2dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/textViewSwitchPicMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>



        <TextView
            android:text="跳转到GLActivity"
            android:layout_margin="2dp"
            android:layout_alignParentRight="true"
            android:id="@+id/textViewGLSurfaceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="开始后台录制"
            android:layout_margin="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/recordBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:id="@+id/recrodHasPreview"
            android:layout_alignParentRight="true"
            android:text="开始后台录制（有界面）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>




    </RelativeLayout>



    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</LinearLayout>